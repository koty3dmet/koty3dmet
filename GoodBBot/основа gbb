import telebot 
from telebot import types

Token = '7294996329:AAHPd3ILr2GfbzGHZZ5O77EZbNACKqrd7nA'
bot = telebot.TeleBot(Token)


@bot.message_handler(commands = ['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn_1 = types.KeyboardButton("Что это за бот?")
    markup.add(btn_1)
    bot.send_message(message.from_user.id, 'Добро пожаловать в бота памяти', reply_markup=markup)

